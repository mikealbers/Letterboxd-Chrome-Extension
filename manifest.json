{
    "name": "Letterboxd Search Extension",
    "version": "1.0",
    "description": "Chrome extension to search Letterboxd.com",
    "manifest_version": 2,

    "browser_action": {
        "default_icon": "icon-128.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": ["shared_functions.js", "context_menu.js"]
    },
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "128": "icon-128.png"
    }
}